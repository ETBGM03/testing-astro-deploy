---
import { Image } from "astro:assets";
import Link from "../atoms/Link.astro";

import burger from '../../../public/assets/icons/burger.svg'

console.info(burger)

import { dataHeaderLinks } from "./constants";

const {pathname} = Astro.url
---

<nav class="nav flex items-center justify-end lg:gap-x-[52px] flex-1 w-full">
  <div class="hidden md:flex gap-x-12 navContent">
    <div class="flex gap-x-10">
      {dataHeaderLinks.map(({ name, to }) => {
        const isActive = pathname === to;
        return <Link name={name} to={to} className={`${isActive ? "text-primary font-bold" : "text-white font-normal"}`} />
      })}
    </div>
    <div>
      <button
        class="bg-primary w-full text-white text-center font-montserrat text-[19px] font-bold px-8 py-2 rounded-[22px] bg-gradient-to-r from-[#045000] via-[#3ABD00] to-[#045000]"
      >
        Learn more
      </button>
    </div>
  </div>
  <button id="menuButton" class="block z-20 md:hidden items-center">
    <Image width={26} height={26} src={burger} alt="Menu Hamburger" />
  </button>  
</nav>