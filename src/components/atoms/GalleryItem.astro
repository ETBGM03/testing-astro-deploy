---
interface Props {
    source: string
    textOverlay: string
}


const {source, textOverlay} = Astro.props

---

<div class="relative overflow-hidden group w-[375px] h-[468px] rounded-[20px]">
    <img
      src={source}
      alt="Gallery item"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black bg-opacity-[0.60] flex items-center justify-center transform translate-x-full group-hover:translate-x-0 transition-transform duration-500">
      <span class="text-white text-center font-poppins text-[31px] font-semibold leading-[45px]">{textOverlay}</span>
    </div>
  </div>