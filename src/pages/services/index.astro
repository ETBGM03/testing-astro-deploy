---
import Gallery from "src/components/molecules/Gallery.astro";
import Header from "src/components/sections/Header.astro";
import Layout from "src/layouts/Layout.astro";

import {images} from './constant'

---

<Layout title="Our Services">
    <Header />
    <main>
        <div class="mt-[70px]">
            <h2 class="text-white text-center font-poppins text-[42px]/[42px] md:text-[37px]/[42px] lg:text-[58px]/[71px] font-semibold uppercase">SERVICES</h2>
        </div>
        <div class="flex items-center mt-[67px] lg:mt-20 px-5 justify-center py-4">
            <Gallery images={images} />
        </div>
    </main>
</Layout>